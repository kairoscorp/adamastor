<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/contexts_stats"
        layout="@layout/statistics_context" />

    <include
        android:id="@+id/applications_stats"
        layout="@layout/statistics_applications" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/id_statistics_swap_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/stats_button_margin"
        app:backgroundTint="@color/secondaryColor"
        app:layout_anchor="@+id/contexts_stats"
        app:layout_anchorGravity="right|bottom"
        app:srcCompat="@drawable/ic_pie_chart" />

</android.support.design.widget.CoordinatorLayout>
