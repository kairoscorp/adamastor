<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="corp.kairos.adamastor.Statistics.StatisticsActivity$PlaceholderFragment">

    <RelativeLayout
        android:id="@+id/no_stats_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/no_stats_info_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_info_outline_black_24dp"
            android:tint="@color/secondaryLightColor"
            />

        <TextView
            android:id="@+id/no_stats_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/no_stats_info_icon"
            android:layout_marginTop="10dp"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:text="@string/no_stats_info_title"
            />

        <TextView
            android:id="@+id/no_stats_info_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:layout_below="@id/no_stats_info_title"
            android:text="@string/no_stats_info_subtitle"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/stats_apps_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        >
    </ListView>

</RelativeLayout>