<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="corp.kairos.adamastor.Onboarding.OnboardingFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/onboarding_summary" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/onboarding_work_hours"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="From"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="94dp"
                    tools:layout_editor_absoluteY="75dp" />

                <TextClock
                    android:id="@+id/work_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/textView5"
                    android:text="10:00"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="36dp"
                    tools:layout_editor_absoluteX="58dp"
                    tools:layout_editor_absoluteY="75dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/work_from"
                    android:text="To"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteY="75dp" />

                <TextClock
                    android:id="@+id/work_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/textView6"
                    android:text="18:00"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="36dp"
                    tools:layout_editor_absoluteX="152dp"
                    tools:layout_editor_absoluteY="75dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_work_place"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapWork"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/onboarding_house"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapHome"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp" />

            <Button
                android:id="@+id/leisure_apps"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leisure Applications"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <Button
                android:id="@+id/work_apps"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work related Applications"
                android:textAppearance="@style/TextAppearance.AppCompat" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
