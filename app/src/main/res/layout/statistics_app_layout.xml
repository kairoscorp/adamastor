<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_stats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/app_stats_image"
        android:layout_width="67dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_statistics_list_app_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/app_stats_label"
        style="@android:style/TextAppearance.Widget.TextView"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="AppName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/app_stats_image"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/app_stats_usage_time"
        android:layout_width="64dp"
        android:layout_height="17dp"
        android:ems="10"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:text="120 minutes"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/app_stats_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.778"
        app:layout_constraintStart_toEndOf="@+id/app_stats_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/app_stats_progress_bar"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/app_stats_label"
        android:layout_marginStart="8dp"
        android:progress="75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/app_stats_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_stats_percentage"
        android:layout_width="52dp"
        android:layout_height="17dp"
        android:ems="10"
        android:gravity="center"
        android:text="100 %"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/app_stats_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toEndOf="@+id/app_stats_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>